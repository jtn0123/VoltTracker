# Database Configuration
POSTGRES_USER=volt
POSTGRES_PASSWORD=changeme_use_strong_password
POSTGRES_DB=volt_tracker

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=generate-a-random-string-here

# Security Configuration
# API token for Torque Pro uploads - set this to a random string
# Torque URL becomes: http://your-server:8080/torque/upload/YOUR_TOKEN_HERE
TORQUE_API_TOKEN=

# Dashboard authentication (leave DASHBOARD_PASSWORD empty to disable auth in dev)
DASHBOARD_USER=admin
DASHBOARD_PASSWORD=

# Rate limiting (set to false to disable)
RATE_LIMIT_ENABLED=true

# Optional: Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Cost tracking
ELECTRICITY_COST=0.12
GAS_COST=3.50
